
<!--start l-contents-->
<div class="l-container u-clear">

    <!--start l-main-->
    <main class="l-main js-main">
        <div class="l-main-block"></div>
        <a href="/articles/new" class="l-main-button">
           <div class="button">
                <p class="button-text">New Article</p>
            </div>
        </a>
        <ul class="archive archive-admin">
              <% if @articles.any? %> 
            <% @articles.each do |a| %>
                 <li class="archive-item">
                    <a href="#" class="post-article">
                        <time class="post-article-date" datetime="<%= a.created_at %>"><%= a.created_at.to_date.to_formatted_s(:rfc822) %></time>
                        <h1 class="post-article-title"><%= a.title %></h1>
                    </a>
                </li>
            <% end %>          
            <% end %>   
        </ul>
    </main>
    <!--end l-main-->

</div>
<!--end l-contents-->

